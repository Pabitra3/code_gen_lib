
[pytest]
python_files = test_*.py
python_classes = Test*
python_functions = test_*

addopts = -v -s --tb=short

{% if markers %}
markers =
    {% for marker in markers %}
    {{ marker }}
    {% endfor %}
{% endif %}

{% if env_vars %}
env =
    {% for key, value in env_vars.items() %}
    {{ key }}={{ value }}
    {% endfor %}
{% endif %}

testpaths = tests